<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sao_kind" />
            <TextView
                android:id="@+id/sao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="扫啊扫"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/alertDialog_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="9dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/ll2"
            android:layout_toRightOf="@+id/ll"
            android:background="@drawable/bg_edittext_normal"
            android:drawableLeft="@drawable/a_4"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/root"
            android:hint="360京东"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000" />
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_xiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_msg_hei"
                android:gravity="center" />

            <TextView
                android:id="@+id/xiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="#000000" />
        </LinearLayout>

    </RelativeLayout>

